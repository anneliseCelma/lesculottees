{% extends "base.twig" %}

{# Ce modèle TWIG étend le modèle 'base.twig' : il contient tous les éléments fixes
   et un bloc main dont le contenu est spécialisé pour afficher un livre #}
{% block css %}
<link rel="stylesheet" href="css/accueil.css">
{% endblock  css %}  

{% block main %}
<section>
	<div class="titre">
		<h2>{{accueil.titre1}}</h2>
		<h3>{{accueil.titre2}}</h3>
	</div>
	<div class="slider">
		<figure>
			<img src="images/{{ image1.url }}" alt="{{ image1.alt }}">
			<img src="images/{{ image2.url }}" alt="{{ image2.alt }}">
			<img src="images/{{ image3.url }}" alt="{{ image3.alt }}">

		</figure>
	</div>

</section>
{% endblock main %}